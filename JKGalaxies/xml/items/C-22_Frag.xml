<?xml version="1.0"?>
<!-- This is a comment -->

<!-- EXAMINE MENU XML FILES -->

<!-- Anything I mark with a star (*) directly affects what is shown on screen. -->
<!-- You can use string file references like in weapon files for these -->

<!-- If you get a problem, check your console for errors. -->

<!-- This tag must always go at the beginning, and be closed at the end -->
<ItemXML>

<!-- This is a group header -->
<!-- * -->
<ProductionInfo>

<!-- Everything within this group is marked as * -->
<!-- The stuff that is within these tags is also marked as * -->
<!-- This should be pretty self explanatory. Adostic Arms is the manufacturer, etc. -->
<!-- There is a limit of 5 fields in this category. (iirc). Feel free to experiment! -->
<!-- Watch your spelling though. -->
<Manufacturer>Merr-Sonn Munitions</Manufacturer>
<Model>C-22</Model>
<Type>Timed Fragmentation Grenade</Type>
<Size>Small</Size>

<!-- Closing category -->
</ProductionInfo>
<!-- Beginning new category -->
<Usage>
<!-- Same deal as above. Hardcoded limit of 5 fields. Everything is a *. -->
<Sights></Sights>
<Indicators>Red Bar - Armed, Flashing Red Lights - Detonation Timer</Indicators>
<ReloadTime></ReloadTime>
<Attachments></Attachments>
<Variations></Variations>
<!-- Closing category -->
</Usage>


<!-- The category name is not hardcoded, but the type is 100% hardcoded (for now) -->
<TechnicalSpecs type="twocoltable" col1="Primary" col2="Secondary">
<!-- We have a slight format change here for this table -->


<Ammunition>
<!-- The above is a row label -->
<!-- Ingame, this will read "Ammunition....Power Cells...Smoke canister" -->
<Primary></Primary>
<Secondary></Secondary>
</Ammunition>

<Capacity>
<Primary>1 Detonation</Primary>
<Secondary></Secondary>
</Capacity>

<Action>
<Primary>Hold Primary Fire to Chage a Throw</Primary>
<Secondary>Tap Alt Fire to Cook the Timer</Secondary>
</Action>

<RateOfFire>
<Primary filler="fm1-delaypm" format="%2.0f x 12 rounds"></Primary>
<Secondary></Secondary>
</RateOfFire>

<Recoil>
<Primary filler="fm1-recoil" format="Low (%2.2f)"></Primary>
<Secondary filler="fm2-recoil" format="Heavy (%2.2f)"></Secondary>
</Recoil>

<Accuracy>
<Primary filler="fm1-spread" format ="Good (%0.2f)"></Primary>
<Secondary filler="fm2-spread" format ="Medium (%2.1f)"></Secondary>
</Accuracy>

<EffectiveRange>
<Primary></Primary>
<Secondary></Secondary>
</EffectiveRange>

<AbsoluteRange>
<Primary filler="fm1-range" format="%91.0f m"></Primary>
<Secondary filler="fm2-range" format="%5.0f m"></Secondary>
</AbsoluteRange>

<ProjectileVelocity>
<Primary filler="fm1-vel" format="%2.1f m/s"></Primary>
<Secondary filler="fm2-vel" format="%2.1f m/s"></Secondary>
</ProjectileVelocity>

<Damage>
<Primary filler="fm1-baseDamage" format="%i x 12 pts">140 Splash Damage in 6 m Radius</Primary>
<Secondary></Secondary>
</Damage>

<Appearance>
<Primary>Medium Sized Fragmented Explosion</Primary>
<Secondary></Secondary>
</Appearance>

</TechnicalSpecs>

<!-- Remember to close with this tag -->
</ItemXML>
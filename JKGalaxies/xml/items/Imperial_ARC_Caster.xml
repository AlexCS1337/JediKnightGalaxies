<?xml version="1.0"?>
<!-- This is a comment -->

<!-- EXAMINE MENU XML FILES -->

<!-- Anything I mark with a star (*) directly affects what is shown on screen. -->
<!-- You can use string file references like in weapon files for these -->

<!-- If you get a problem, check your console for errors. -->

<!-- This tag must always go at the beginning, and be closed at the end -->
<ItemXML>

<!-- This is a group header -->
<!-- * -->
<ProductionInfo>

<!-- Everything within this group is marked as * -->
<!-- The stuff that is within these tags is also marked as * -->
<!-- This should be pretty self explanatory. Adostic Arms is the manufacturer, etc. -->
<!-- There is a limit of 5 fields in this category. (iirc). Feel free to experiment! -->
<!-- Watch your spelling though. -->
<Manufacturer>BlasTech Industires</Manufacturer>
<Model>Imperial ARC Caster</Model>
<Type>Electrical Rifle</Type>
<Size>Medium</Size>

<!-- Closing category -->
</ProductionInfo>
<!-- Beginning new category -->
<Usage>
<!-- Same deal as above. Hardcoded limit of 5 fields. Everything is a *. -->
<Sights>Iron Sights</Sights>
<Indicators>Ammo Number and Fire-Mode Indicators</Indicators>
<ReloadTime>1.5 s</ReloadTime>
<Attachments>Tageting Laser, Scope</Attachments>
<Variations>N/A</Variations>
<!-- Closing category -->
</Usage>


<!-- The category name is not hardcoded, but the type is 100% hardcoded (for now) -->
<TechnicalSpecs type="twocoltable" col1="Primary" col2="Secondary">
<!-- We have a slight format change here for this table -->


<Ammunition>
<!-- The above is a row label -->
<!-- Ingame, this will read "Ammunition....Power Cells...Smoke canister" -->
<Primary>Blaster Power Pack</Primary>
<Secondary></Secondary>
</Ammunition>

<Capacity>
<Primary>12-60 Shots</Primary>
<Secondary>3 Seconds of Sustained Firing (60 shots)</Secondary>
</Capacity>

<Action>
<Primary>Charageble</Primary>
<Secondary>Fully Automatic</Secondary>
</Action>

<RateOfFire>
<Primary filler="fm1-delaypm" format="%2.0f x 12 rounds">50 rounds/min</Primary>
<Secondary>Continuous Arc (1200 rounds/min)</Secondary>
</RateOfFire>

<Recoil>
<Primary filler="fm1-recoil" format="Low (%2.2f)">Medium (1.0)</Primary>
<Secondary filler="fm2-recoil" format="Heavy (%2.2f)">Low (0.3)</Secondary>
</Recoil>

<Accuracy>
<Primary filler="fm1-spread" format ="Good (%0.2f)">Good (1.6)</Primary>
<Secondary filler="fm2-spread" format ="Medium (%2.1f)">Good (0.4)</Secondary>
</Accuracy>

<EffectiveRange>
<Primary>Close to Medium</Primary>
<Secondary>Close to Medium</Secondary>
</EffectiveRange>

<AbsoluteRange>
<Primary filler="fm1-range" format="%91.0f m">49 m</Primary>
<Secondary filler="fm2-range" format="%5.0f m">43 m</Secondary>
</AbsoluteRange>

<ProjectileVelocity>
<Primary filler="fm1-vel" format="%2.1f m/s">213 m/s</Primary>
<Secondary filler="fm2-vel" format="%2.1f m/s"></Secondary>
</ProjectileVelocity>

<Damage>
<Primary filler="fm1-baseDamage" format="%i x 12 pts">8 x 5 Damage</Primary>
<Secondary>8 Damage</Secondary>
</Damage>

<Appearance>
<Primary>Charged Blue Electric Energy Bolt</Primary>
<Secondary>Electrical Arc</Secondary>
</Appearance>

</TechnicalSpecs>

<!-- Remember to close with this tag -->
</ItemXML>
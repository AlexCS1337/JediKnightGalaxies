<?xml version="1.0"?>
<!-- This is a comment -->

<!-- EXAMINE MENU XML FILES -->

<!-- Anything I mark with a star (*) directly affects what is shown on screen. -->
<!-- You can use string file references like in weapon files for these -->

<!-- If you get a problem, check your console for errors. -->

<!-- This tag must always go at the beginning, and be closed at the end -->
<ItemXML>

<!-- This is a group header -->
<!-- * -->
<ProductionInfo>

<!-- Everything within this group is marked as * -->
<!-- The stuff that is within these tags is also marked as * -->
<!-- This should be pretty self explanatory. Adostic Arms is the manufacturer, etc. -->
<!-- There is a limit of 5 fields in this category. (iirc). Feel free to experiment! -->
<!-- Watch your spelling though. -->
<Manufacturer>Merr-Sonn Munitions</Manufacturer>
<Model>CR-24</Model>
<Type>Flame Thrower</Type>
<Size>Medium</Size>

<!-- Closing category -->
</ProductionInfo>
<!-- Beginning new category -->
<Usage>
<!-- Same deal as above. Hardcoded limit of 5 fields. Everything is a *. -->
<Sights>N/A</Sights>
<Indicators>Number Ammo Indicator</Indicators>
<ReloadTime>Doesn't Reload</ReloadTime>
<Attachments>N/A</Attachments>
<Variations>N/A</Variations>
<!-- Closing category -->
</Usage>


<!-- The category name is not hardcoded, but the type is 100% hardcoded (for now) -->
<TechnicalSpecs type="twocoltable" col1="Primary" col2="Secondary">
<!-- We have a slight format change here for this table -->


<Ammunition>
<!-- The above is a row label -->
<!-- Ingame, this will read "Ammunition....Power Cells...Smoke canister" -->
<Primary>Gas Fuel Canister</Primary>
<Secondary></Secondary>
</Ammunition>

<Capacity>
<Primary>8 Seconds Sustained</Primary>
<Secondary>19 Bursts</Secondary>
</Capacity>

<Action>
<Primary>Fully Automatic</Primary>
<Secondary>Flame Burst</Secondary>
</Action>

<RateOfFire>
<Primary filler="fm1-delaypm" format="%2.0f x 12 rounds">857 shots/minute</Primary>
<Secondary>857 shots/minute</Secondary>
</RateOfFire>

<Recoil>
<Primary filler="fm1-recoil" format="Low (%2.2f)">Low (0.5)</Primary>
<Secondary filler="fm2-recoil" format="Heavy (%2.2f)">Low (0.5)</Secondary>
</Recoil>

<Accuracy>
<Primary filler="fm1-spread" format ="Good (%0.2f)">Severe (8.0)</Primary>
<Secondary filler="fm2-spread" format ="Medium (%2.1f)"></Secondary>
</Accuracy>

<EffectiveRange>
<Primary>Close</Primary>
<Secondary>Close</Secondary>
</EffectiveRange>

<AbsoluteRange>
<Primary filler="fm1-range" format="%91.0f m">12 m</Primary>
<Secondary filler="fm2-range" format="%5.0f m"></Secondary>
</AbsoluteRange>

<ProjectileVelocity>
<Primary filler="fm1-vel" format="%2.1f m/s">91 m/s</Primary>
<Secondary filler="fm2-vel" format="%2.1f m/s"></Secondary>
</ProjectileVelocity>

<Damage>
<Primary filler="fm1-baseDamage" format="%i x 12 pts">8 Fire Damage Damage</Primary>
<Secondary></Secondary>
</Damage>

<Appearance>
<Primary>Sexy Flame Plumes</Primary>
<Secondary>Less Sexy Flame Plumes</Secondary>
</Appearance>

</TechnicalSpecs>

<!-- Remember to close with this tag -->
</ItemXML>
<?xml version="1.0"?>
<!-- This is a comment -->

<!-- EXAMINE MENU XML FILES -->

<!-- Anything I mark with a star (*) directly affects what is shown on screen. -->
<!-- You can use string file references like in weapon files for these -->

<!-- If you get a problem, check your console for errors. -->

<!-- This tag must always go at the beginning, and be closed at the end -->
<ItemXML>

<!-- This is a group header -->
<!-- * -->
<ProductionInfo>

<!-- Everything within this group is marked as * -->
<!-- The stuff that is within these tags is also marked as * -->
<!-- This should be pretty self explanatory. Adostic Arms is the manufacturer, etc. -->
<!-- There is a limit of 5 fields in this category. (iirc). Feel free to experiment! -->
<!-- Watch your spelling though. -->
<Manufacturer>BlasTech Industries; Modified by Morgan Katarn</Manufacturer>
<Model>Bryar</Model>
<Type>Heavy Blaster Pistol</Type>
<Size>Small</Size>

<!-- Closing category -->
</ProductionInfo>
<!-- Beginning new category -->
<Usage>
<!-- Same deal as above. Hardcoded limit of 5 fields. Everything is a *. -->
<Sights>N/A</Sights>
<Indicators>Ammo and Fire Mod</Indicators>
<ReloadTime>0.75 S</ReloadTime>
<Attachments>4X Optical Sniper Scope</Attachments>
<Variations>N/A</Variations>
<!-- Closing category -->
</Usage>


<!-- The category name is not hardcoded, but the type is 100% hardcoded (for now) -->
<TechnicalSpecs type="twocoltable" col1="Primary" col2="Secondary">
<!-- We have a slight format change here for this table -->


<Ammunition>
<!-- The above is a row label -->
<!-- Ingame, this will read "Ammunition....Power Cells...Smoke canister" -->
<Primary>Power Cells</Primary>
<Secondary>Power Cells</Secondary>
</Ammunition>

<Capacity>
<Primary>17 Shots</Primary>
<Secondary>5 Shots</Secondary>
</Capacity>

<Action>
<Primary>Semi-Automatic</Primary>
<Secondary>Chargeable (1.5 s)</Secondary>
</Action>

<RateOfFire>
<Primary filler="fm1-delaypm" format="%2.0f x 12 rounds">120 rounds/min</Primary>
<Secondary>75 Rounds per Minute</Secondary>
</RateOfFire>

<Recoil>
<Primary filler="fm1-recoil" format="Low (%2.2f)">Medium (1.2)</Primary>
<Secondary filler="fm2-recoil" format="Heavy (%2.2f)">Medium (1.5)</Secondary>
</Recoil>

<Accuracy>
<Primary filler="fm1-spread" format ="Good (%0.2f)">Excellent (0.1)</Primary>
<Secondary filler="fm2-spread" format ="Medium (%2.1f)">Excellent (0.1)</Secondary>
</Accuracy>

<EffectiveRange>
<Primary>Close to Long</Primary>
<Secondary>Close to Long</Secondary>
</EffectiveRange>

<AbsoluteRange>
<Primary filler="fm1-range" format="%91.0f m">152 m</Primary>
<Secondary filler="fm2-range" format="%5.0f m">183 m</Secondary>
</AbsoluteRange>

<ProjectileVelocity>
<Primary filler="fm1-vel" format="%2.1f m/s">122 m/s</Primary>
<Secondary filler="fm2-vel" format="%2.1f m/s">152 m/s</Secondary>
</ProjectileVelocity>

<Damage>
<Primary filler="fm1-baseDamage" format="%i x 12 pts">28 Damage</Primary>
<Secondary>30-102</Secondary>
</Damage>

<Appearance>
<Primary>Small Caliber Red-Orange Blaster</Primary>
<Secondary>Medium Caliber Red-Orange Blaster</Secondary>
</Appearance>

</TechnicalSpecs>

<!-- Remember to close with this tag -->
</ItemXML>
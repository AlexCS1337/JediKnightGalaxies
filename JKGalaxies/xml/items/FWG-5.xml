<?xml version="1.0"?>
<!-- This is a comment -->

<!-- EXAMINE MENU XML FILES -->

<!-- Anything I mark with a star (*) directly affects what is shown on screen. -->
<!-- You can use string file references like in weapon files for these -->

<!-- If you get a problem, check your console for errors. -->

<!-- This tag must always go at the beginning, and be closed at the end -->
<ItemXML>

<!-- This is a group header -->
<!-- * -->
<ProductionInfo>

<!-- Everything within this group is marked as * -->
<!-- The stuff that is within these tags is also marked as * -->
<!-- This should be pretty self explanatory. Adostic Arms is the manufacturer, etc. -->
<!-- There is a limit of 5 fields in this category. (iirc). Feel free to experiment! -->
<!-- Watch your spelling though. -->
<Manufacturer>Malaxan Firepower Inc</Manufacturer>
<Model>FWG-5</Model>
<Type>Flechette Pistol</Type>
<Size>Small</Size>

<!-- Closing category -->
</ProductionInfo>
<!-- Beginning new category -->
<Usage>
<!-- Same deal as above. Hardcoded limit of 5 fields. Everything is a *. -->
<Sights>Iron Sights</Sights>
<Indicators>Missile Icons</Indicators>
<ReloadTime>2.0 S</ReloadTime>
<Attachments>Targeting Laser</Attachments>
<Variations>N/A</Variations>
<!-- Closing category -->
</Usage>


<!-- The category name is not hardcoded, but the type is 100% hardcoded (for now) -->
<TechnicalSpecs type="twocoltable" col1="Primary" col2="Secondary">
<!-- We have a slight format change here for this table -->


<Ammunition>
<!-- The above is a row label -->
<!-- Ingame, this will read "Ammunition....Power Cells...Smoke canister" -->
<Primary>Flechette Clip Missiles</Primary>
<Secondary>N/A</Secondary>
</Ammunition>

<Capacity>
<Primary>8 shots</Primary>
<Secondary>N/A</Secondary>
</Capacity>

<Action>
<Primary>Semi-automatic</Primary>
</Action>

<RateOfFire>
<Primary filler="fm1-delaypm" format="%2.0f x 12 rounds">50 rounds/min</Primary>
<Secondary>N/A</Secondary>
</RateOfFire>

<Recoil>
<Primary filler="fm1-recoil" format="Low (%2.2f)">High (5.0)</Primary>
<Secondary filler="fm2-recoil" format="Heavy (%2.2f)">N/A</Secondary>
</Recoil>

<Accuracy>
<Primary filler="fm1-spread" format ="Good (%0.2f)">Flawless (0.0)</Primary>
<Secondary filler="fm2-spread" format ="Medium (%2.1f)">N/A</Secondary>
</Accuracy>

<EffectiveRange>
<Primary>Medium to Very Long</Primary>
<Secondary>N/A</Secondary>
</EffectiveRange>

<AbsoluteRange>
<Primary filler="fm1-range" format="%91.0f m">1219 m</Primary>
<Secondary filler="fm2-range" format="%5.0f m">N/A</Secondary>
</AbsoluteRange>

<ProjectileVelocity>
<Primary filler="fm1-vel" format="%2.1f m/s">213 m/s</Primary>
<Secondary filler="fm2-vel" format="%2.1f m/s">N/A</Secondary>
</ProjectileVelocity>

<Damage>
<Primary filler="fm1-baseDamage" format="%i x 12 pts">70 Damage</Primary>
<Secondary>N/A</Secondary>
</Damage>

<Appearance>
<Primary>Small Explosive Proximity Flechette Missiles with Blue Exhaust</Primary>
<Secondary>N/A</Secondary>
</Appearance>

</TechnicalSpecs>

<!-- Remember to close with this tag -->
</ItemXML>